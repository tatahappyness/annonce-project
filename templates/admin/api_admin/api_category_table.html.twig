 <div class="card shadow mb-4">
                    <div class="card-header btn-success-1 py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
							Listes des Catégorie :
							<button class=" btn btn-primary" data-toggle="modal" data-target="#myModal_add_cat"  type="button" title="Ajouter nouveaux Categorie"><i class="fa fa-plus"></i>
							</button>
						</h6>
						
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
							<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead class="bg-warning text-dark">
                            <tr>
								<th>#</th>
                                <th>Nom</th>
                                <th>Date de création</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
								<th>#</th>
                                <th>Nom</th>
                                <th>Date de création</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                            </tfoot>
                            <tbody>
							
							
							{% if list_cat != null %}							
                                {% for lst in list_cat %}
									<tr>
										<td>{{ lst.getId() }}</td>
										<td>{{ lst.getCategTitle() }}</td>
										<td>{{ lst.getCategDateCrea() | date('d/m/y H:m:s') }}</td>
										<td>{{ lst.getDescription() }}</td>
										<td>
											
                                            
                                            <button class="btn btn-danger" data-toggle="modal" data-target="#myModal_sup_cat" onclick="show_modal_delete_categorie({{ lst.getId() }})" type="button" title="Supprimer"><i class="fa fa-times"></i>
                                            </button>
                                        
											<button class="btn btn-info" data-toggle="modal" data-target="#myModal_edit_cat" onclick="show_modal_edit_cat({{ lst.getId() }})"  type="button" title="Modifier"><i class="fa fa-edit"></i>
											</button>
											
											<button class="btn btn-warning"  data-toggle="modal" data-target="#myModal_aff_cat_{{ lst.getId() }}"   type="button" title="Modifier"><i class="fa fa-eye"></i>
											</button>
											
										</td>
									</tr>
								{% endfor %}
							{% else %}
								<li class="text-center"></li>                                     
							{% endif %}	
									
							
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>