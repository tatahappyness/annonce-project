
{% extends  'base.html.twig' %}

{% block stylesheets %}

  <title>Orange-Travaux ( Admin )</title>

  <!-- Custom fonts for this template-->
    <link href="{{ absolute_url('/assets/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" />

  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

	<!-- Custom styles for this template-->
    <link href="{{ absolute_url('/assets/css/sb-admin-2.min.css') }}" rel="stylesheet" />

	<link href="{{ absolute_url('/assets/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
	
  <style>
      .card-header {
          background-color: #fcd42f4a;
      }
      #wrapper{
        background-color: #777;
      }
    </style>
    
{% endblock %}

{% block body %}


<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper" style="background-color: #777">

	<!--Begin nav_bar api_admin space -->
	{% include "./admin/api_admin/nav_bar.html.twig" %}
	<!--End nav_bar api_admin space -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" style="background-color:#ececec"; class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">
	  
		<!--Begin head_bar api_admin space -->
		{% include "./admin/api_admin/head_bar.html.twig" %}
		<!--End head_bar api_admin space -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

		  <!-- Divider -->
		  <hr class="sidebar-divider">

          <!-- Content Row -->
          <div class="row">

       
            <!-- DataTales Example -->
            <div class="col-12 mb-8">
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Listes des professionnels : {{ numberUserPro }} </h6>
                </div>

                <div class="card-body">
                  
                  <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    
                      <thead class="bg-warning text-dark">
                        <tr>
                            <th>#</th>
                            <th>Nom et prénom</th>
                            <th>Ville</th>
                            <th>Métier</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Nom et prénom</th>
                            <th>Ville</th>
                            <th>Métier</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Statut</th>
                            <th>Action</th>
                      </tr>
                      </tfoot>
                      <tbody>
					  {% if list_pros != null %}							
                                {% for lst in list_pros %}
							
                            <tr>
                                <td>{{ lst.getId() }}</td>
                                <td>{{ lst.firstname() }}</td>
                                <td>{{ lst.getUserCity().getVilleNom() }}</td>
                                <td>{{ lst.getUserCategoryActivity().getCategTitle() }}</td>
                                <td>{{ lst.getEmail() }}</td>
                                <td>{{ lst.getMobile() }}</td>
                                <td>{{ lst.getEnabled() }}</td>
                                <td>
									<button class="btn btn-success" data-toggle="modal" data-target="#myModal_aff_cat" type="button" title="Activer"><i class="fa  fa-check-circle"></i>
									</button>
									<button class="btn btn-secondary" data-toggle="modal" data-target="#myModal_aff_cat" type="button" title="Désactiver"><i class="fa fa-circle"></i>
									</button>
									<button class="btn btn-danger" data-toggle="modal" data-target="#myModal_sup_service" type="button" title="Supprimer"><i class="fa fa-times"></i>
									</button>
								</td>
                            </tr>
								{% endfor %}
							{% else %}
								<li class="text-center"> AUCUN RESULTAT!<li>                                     
							{% endif %}	
														
                      </tbody>
                    </table>
                  </div>
                </div>

              </div>
            </div>
			
          </div>


        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

		<!--Begin foot_bar api_admin space -->
		{% include "./admin/api_admin/foot_bar.html.twig" %}
		<!--End foot_bar api_admin space -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

</body>
	{% endblock %}

	{% block javascripts %}

  <!-- Bootstrap core JavaScript-->
  <script src="{{ absolute_url('/assets/vendor/jquery/jquery.min.js') }}"></script>
  <script src="{{ absolute_url('/assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

  <!-- Core plugin JavaScript-->
  <script src="{{ absolute_url('/assets/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

  <!-- Custom scripts for all pages-->
  <script src="{{ absolute_url('/assets/js/sb-admin-2.min.js') }}"></script>



  <!-- Page level plugins -->
  <script src="{{ absolute_url('/assets/vendor/datatables/jquery.dataTables.min.js') }}"></script>
  <script src="{{ absolute_url('/assets/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>
  <script src="{{ absolute_url('/assets/vendor/datatables/datatables-demo.js') }}"></script>


	
	<script>
	
		$('.nav-item').removeClass('active');
		$('.nav_lst_in_pro').addClass('active');
		
	</script>
	
	
	{% endblock %}
	
	
	
	
	
	
	
	
	
	