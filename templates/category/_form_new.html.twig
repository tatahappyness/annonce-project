<div class="col-lg-12 mb-4 ">
    {{ form_start(form) }}
    </br>
    
    <div class="form-group">
        {{ form_row(form.categTitle, { label: 'Categorie:' } ) }}        
    </div>
    

        
    <div class="form-group">
        <label class="control-label">
            {{ form_label(form.description) }}
        </label>
        {{ form_errors(form.description) }}
        <div class="">
            {{ form_widget(form.description ) }}
        </div>
    </div>
    

        
    <div class="form-group">
        <label class="control-label">
            {{ form_label(form.img) }}
        </label>
        {{ form_errors(form.img) }}
        <div class="">
            {{ form_widget(form.img ) }}
        </div>
    </div>

        
    <div class="form-group">
        <label class="control-label">
            {{ form_label(form.icon) }}
        </label>
        {{ form_errors(form.icon) }}
        <div class="">
            {{ form_widget(form.icon ) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">    
            <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
        </div>
        <div class="col-lg-6">
            <a class="btn btn-secondary"   href="{{ path('category_index') }}">Retourner list</a>        
        </div>
    </div>
    <hr>
{{ form_end(form) }}
    
</div>