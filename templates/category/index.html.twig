	<script>

function show_modal_sup_categorie($id){
    
    var xhttp = new XMLHttpRequest();
    xhttp.onreadystatechange = function() {
        if (xhttp.readyState == 4 && xhttp.status == 200) {
           document.getElementById("load_modal_delete_category").innerHTML = xhttp.responseText;
       }
    };

    xhttp.open("GET", "/admin/category/"+$id+"/delete" , true);
    xhttp.send();
}

</script>

