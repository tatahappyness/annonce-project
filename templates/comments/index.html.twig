	<script>

		function show_modal_delete_service($id){
                 var xhttp = new XMLHttpRequest();
                 xhttp.onreadystatechange = function() {
                     if (xhttp.readyState == 4 && xhttp.status == 200) {
                        document.getElementById("load_modal_delete_myModal_sup_publish").innerHTML = xhttp.responseText;
                    }
                 };

                 xhttp.open("GET", "../comments/"+$id , true);
                 xhttp.send();
		}
    </script>
	
