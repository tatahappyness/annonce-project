{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
    <h1>Comments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ comment.description }}</td>
            </tr>
            <tr>
                <th>IsPro</th>
                <td>{{ comment.isPro ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsParticular</th>
                <td>{{ comment.isParticular ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateCrea</th>
                <td>{{ comment.dateCrea ? comment.dateCrea|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsPublish</th>
                <td>{{ comment.isPublish ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comments_index') }}">back to list</a>

    <a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>

