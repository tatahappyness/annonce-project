{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Déscription</th>
                <td>{{ comment.description }}</td>
            </tr>
            <tr>
                <th>Professionnel</th>
                <td>{{ comment.isPro ? 'OUI' : 'NON' }}</td>
            </tr>
            <tr>
                <th>Particulier</th>
                <td>{{ comment.isParticular ? 'OUI' : 'NON' }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ comment.dateCrea ? comment.dateCrea|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Publication</th>
                <td>{{ comment.isPublish ? 'OUI' : 'NON'  }}</td>
            </tr>
        </tbody>
    </table>
    
