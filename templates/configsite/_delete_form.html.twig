<form method="post" action="{{ path('configsite_delete', {'id': configsite.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ configsite.id) }}">
    <button class="col-ld-12  btn btn-danger"><i class="fa fa-times"></i> Supprimer</button>
</form>
