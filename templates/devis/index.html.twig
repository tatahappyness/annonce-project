{% extends 'base.html.twig' %}

{% block title %}Devis index{% endblock %}

{% block body %}
    <h1>Devis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DetailProject</th>
                <th>FirstName</th>
                <th>UserName</th>
                <th>PhoneNumber</th>
                <th>Email</th>
                <th>ZipCode</th>
                <th>IsAcceptedCondition</th>
                <th>Civility</th>
                <th>IsAskDemande</th>
                <th>DateCrea</th>
                <th>DevisIsAccepted</th>
                <th>DevisIsValidated</th>
                <th>DevisIsFinished</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for devi in devis %}
            <tr>
                <td>{{ devi.id }}</td>
                <td>{{ devi.detailProject }}</td>
                <td>{{ devi.firstName }}</td>
                <td>{{ devi.userName }}</td>
                <td>{{ devi.phoneNumber }}</td>
                <td>{{ devi.email }}</td>
                <td>{{ devi.zipCode }}</td>
                <td>{{ devi.isAcceptedCondition ? 'Yes' : 'No' }}</td>
                <td>{{ devi.civility }}</td>
                <td>{{ devi.isAskDemande ? 'Yes' : 'No' }}</td>
                <td>{{ devi.dateCrea ? devi.dateCrea|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ devi.devisIsAccepted ? 'Yes' : 'No' }}</td>
                <td>{{ devi.devisIsValidated ? 'Yes' : 'No' }}</td>
                <td>{{ devi.devisIsFinished ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('devis_show', {'id': devi.id}) }}">show</a>
                    <a href="{{ path('devis_edit', {'id': devi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('devis_new') }}">Create new</a>
{% endblock %}
