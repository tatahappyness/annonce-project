						</div>
						<div class="modal-body">
						
							<div id="load_modal_affiche_prix" ></div>
							
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-success"
							data-dismiss="modal">
								OK
							</button>
						</div>
					</div><!-- /.modal-content -->
				</div><!-- /.modal-dialog -->
			</div><!-- End /.modal afficher type -->


            <!-- DataTales Example -->
