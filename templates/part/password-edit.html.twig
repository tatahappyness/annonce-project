    </div>
    <!--END HEADER-->


    <div class="jumbotron bg-transparent">
        <main class="section-1 section-main bg-white">
            <!--Begin section  of the list ads by artisan-->
            <section class="bg-transparent mt-5">
                <div class="container">
                    <div Class="row d-flex justify-content-center">

                        <!--Begin left menu particulier space-->
                        {% include "./part/menu/left-menu.html.twig" %}
                        <!--END left menu particulier space-->

                        <div class="col-12 col-md-8">
                            <div class="contenair-content">	
                                <div class="content-container-right">
									
                                </div>
                                <div class="content-container-right">
									
                                    <!--Begin top menu total particulier space-->
                                    {% include "./part/menu/top-menu.html.twig" %}
                                    <!--END top menu total particulier space-->

                                    <!-- My Ask Project section -->
                                    <div class="card">
                                        <div class="card-title h6 p-4  text-secondary d-inline text-uppercase">Modifier mon mot de passe</div>
                                    <div class="card-body">
                                       
                                        <!-- Modal body -->
                                        <div class="pt-2">
                                            <form id="form-update-password">
                                               
                                                <div class="form-group mb-3">
                                                    <label class="">Mot de passe actuel</label>
                                                    <input required type="password" id="passwd_old" class="form-control" name="passwd_old"  placeholder="Votre mot de passe actuel ">
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label class="">Nouvau mot de passe</label>
                                                    <input required type="password" id="passwd_new" class="form-control" name="passwd_new"  placeholder="Votre nouvau mot de passe ">
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label class="">Confirmation mot de passe</label>
                                                   <input required type="password" id="passwd_comfirm" class="form-control" name="passwd_comfirm"  placeholder="Reconfirmer votre nouvau mot de passe">
                                                </div>
                                                <div class="form-group mb-3">
                                                    <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response">
                                                    <div class="g-recaptcha" data-sitekey="6Lcr-qsUAAAAAPrCqD5Yk1iDIw9xBtzP6KSackqm"></div>
                                                </div>
                                                <button type="button" class="btn btn-warning btn-update-psswd w-100">Modifier</button>
                                                <!--<button type="button" class="btn btn-annule btn-danger float-right" data-dismiss="modal">Annuler</button> -->
                                            </form>
                                        </div>
                                        <!-- Modal footer -->    

                                    </div>
                                    <!-- <img class="card-img-bottom" src="..." alt="Card image cap"> -->
                                    </div>
                                    <!-- End My Ask Project section -->
						
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--End section  of the list ads by artisan-->
