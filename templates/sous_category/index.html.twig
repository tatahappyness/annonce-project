                                Nom de sous category: {{ sous_category.sousCategTitle }}
                                Date de creation: {{ sous_category.sousCategDateCrea ? sous_category.sousCategDateCrea|date('Y-m-d') : '' }}
                                Déscription: {{ sous_category.description }}
                                Type de categorie: {{ sous_category.catSousCategoryId.getCategTitle }}
                            </div>
                            <div class="modal-footer">
                                
                                {{ include('sous_category/_delete_form.html.twig') }}
                                
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- End /.modal afficher type -->

                    
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>   
