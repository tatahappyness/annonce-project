                    </button>
                    
                    <a  href="{{ path('sous_category_edit', {'id': sous_category.id}) }}">
						<button class="btn btn-info"  type="button" title="Modifier"><i class="fa fa-edit"></i>
						</button>						
					</a>					
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal_sup_cat" alt="supprimer" data-dismiss="modal">
                            <i class="fa fa-times"></i>
                        </button>
                </td>

                

                <div class="modal fade" id="myModal_sup_cat" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content" style="width: 50rem;">
                            <div class="modal-header">									
