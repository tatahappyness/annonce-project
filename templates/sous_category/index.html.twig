            <!-- DataTales Example -->
            <div class="col mb-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Listes des Sous categories: 
                            <a href="{{ path('sous_category_new') }}">    
                                <button  class=" btn btn-primary" type="button" title="Ajouter nouveaux Sous categorie"><i class="fa fa-plus"></i>
                                </button>
                            </a>
                        </h6> 
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">

                        <table class="table table-bordered display" id="" width="100%" cellspacing="0">
                            <thead class="bg-warning text-dark">        

                            <tr>
								<th>#</th>
                                <th>Nom</th>
                                <th>Désignation</th>
                                <th>Question</th>
                                <th>Categorie</th>
                                <th>Date de création</th>
                                <th>Description</th>
                                <th>Type de category</th>
                                <th>Image</th>
                                <th>Icon</th>
                                <th>Action</th>
                            </tr>

                            </thead>
                            <tfoot>
                            <tr>
								<th>#</th>
                                <th>Nom</th>
                                <th>Désignation</th>
                                <th>Question</th>
                                <th>Categorie</th>
                                <th>Date de création</th>
                                <th>Description</th>
                                <th>Type de category</th>
                                <th>Image</th>
                                <th>Icon</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
        <tbody>

           {% for sous_category in sous_categories %}
            <tr>
                <td>{{ sous_category.id }}</td>
                <td>{{ sous_category.sousCategTitle }}</td>
                <td>{{ sous_category.sousCategIntro }}</td>
                <td>{{ sous_category.sousCategLinkQuestion }}</td>
                <td>
					<button type="button" class="col btn btn-outline-secondary tooltip-viewport-bottom" title="" data-original-title=" {{ sous_category.catSousCategoryId.description }}  </br>  {{ sous_category.catSousCategoryId.CategDateCrea | date('d/m/y H:m:s') }}">{{ sous_category.catSousCategoryId.categTitle }}</button>							                
                </td>
                <td>{{ sous_category.sousCategDateCrea ? sous_category.sousCategDateCrea|date('Y-m-d') : '' }}</td>
                <td>{{ sous_category.description }}</td>
                <td>{{ sous_category.catSousCategoryId.getCategTitle }}</td>
                <td>                             
                    <div class="card-body" style="width: 150px;"  data-toggle="modal" data-target="#myModal_aff_image" onclick="show_modal_affiche_categorie_image({{ sous_category.id }})">
