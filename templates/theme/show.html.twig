{% extends 'base.html.twig' %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ theme.id }}</td>
            </tr>
            <tr>
                <th>Image Fond</th>
                <td>
                    <div class="text-center">
                        <img class="img-fluid img-fluid shadow" style="width: 200px;" src="{{ absolute_url('/uploads/themes/') }}{{ theme.ImageFond }}" alt="">
                    </div>
                </td>
            </tr>
            <tr>
                <th>Color Fond</th>
