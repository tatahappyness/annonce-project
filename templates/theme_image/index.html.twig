  <style>	
  
  	/* width */
	::-webkit-scrollbar {
	  width: 10px;
	}

	/* Track */
	::-webkit-scrollbar-track {
	  background: #f1f1f1; 
	}
	 
	/* Handle */
	::-webkit-scrollbar-thumb {
	  background: #888; 
	}

	/* Handle on hover */
	::-webkit-scrollbar-thumb:hover {
	  background: #555; 
	}


      .card-header {
          background-color: #fcd42f4a;
      }
      #wrapper{
       background-color:#ececec;
      }
      
      .custom-control-input:checked~.custom-control-label::before {
        background-color: #1cc88a;
      }

      
		@media screen  and  (max-width: 680px){
			
			#sidebarToggleTop{
				display: block;
			}
			
			.row_menu {
				display: block;
				position: relative;    
				visibility: visible;
			}
			
			.icon_menu {
				font-size: 3em;
			}
			.menu_nav {
				display: none;	
				color: #fff;					
				background-color: RGBa(29, 197, 151, 0.97);	
				
				
				text-align: center;
				padding: 12px 0;
			}
			.card-body {
				font-size: 95%;
			}
			
			div {
				font-size: 95%;
			}
			
			.img_logo{
				height: 15px;			
			}
			
			.head_title{
				font-size: 15px;			
			}
			
		}
		
		@media screen  and  (min-width: 680px){
			.row_menu {
				display: none;
			}
			
			#sidebarToggleTop{
				display: none;
			}

						
			.menu_home_page{
				display: none;
			}
			
			
			.sticky-footer {
				display: none;
			}
		}
	  

    </style>
    
{% endblock %}

{% block body %}


<body id="page-top">

		<!--Begin head_bar api_admin space -->
		{% include "./admin/api_admin/head_bar.html.twig" %}
		<!--End head_bar api_admin space -->

  <!-- Page Wrapper -->
  <div id="wrapper">

	<!--Begin nav_bar api_admin space -->
	{% include "./admin/api_admin/nav_bar.html.twig" %}
	<!--End nav_bar api_admin space -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" style="background-color:#ececec"; class="mt-5 d-flex flex-column">
	</br>
      <!-- Main Content -->
      <div id="content">
	  
        <!-- Begin Page Content -->
        <div class="container">

		  <!-- Divider -->
		  <hr class="sidebar-divider">

				<div class="row" style="justify-content: space-evenly">				

						<a class=""  href="{{ path('theme_index') }}">
							<div class="active_row_fonction link-1 btn text-white shadow" style="background-color: #c66fb8;">
								<div class="card-body">
									Theme                    
								</div>
							</div>
						</a>		

						<a class=""  href="{{ path('theme_image_index') }}">
							<div class="active_row_type link-1 btn btn-success text-white shadow">
								<div class="card-body">
									Theme Image
								</div>
							</div>
						</a>		
						
						<a class="collapse-item"  href="{{ path('theme_color_index') }}">
							<div class="active_row_categorie link-1 btn  text-white shadow" style="background-color: #4e73df;;">
								<div class="card-body">
									Theme Couleur
								</div>
							</div>
						</a>	
				</div>
						
			</br> 
			
          <!-- Content Row -->
          <div class="row">			
          
	
		    <div class="modal fade" id="myModal_add_theme" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">									
							<h4 class="modal-title" id="myModalLabel">
								Ajouter nouveaux: [Theme Image]
							</h4>
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×
							</button>
						</div>
						<div class="modal-body">         																																		
							<div id="load_model_theme_add">         																																									
							</div>	
						</div>
					</div><!-- /.modal-content -->
				</div><!-- /.modal-dialog -->
			</div><!-- end /.modal suppression Catégorie-->


			<div class="modal fade" id="myModal_sup_theme_image" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">									
							<h4 class="modal-title" id="myModalLabel">
								Confirmer la suppression: [Theme Color]
							</h4>
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×
							</button>
						</div>
						<div class="modal-body">         																																		
							<div id="load_modal_delete_theme_image">         																																									
							</div>	
						</div>
					</div><!-- /.modal-content -->
				</div><!-- /.modal-dialog -->
			</div><!-- end /.modal suppression Catégorie-->

		
	

            <!-- DataTales Example -->
            <div class="col-12 mb-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Theme Image                         
                            <button class="btn btn-primary"  data-toggle="modal" data-target="#myModal_add_theme" onclick="show_modal_add_theme()"  title="Ajouter un Theme"><i class="fa fa fa-plus"></i></button>
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered display" id="" width="100%" cellspacing="0">    
							<thead>
								<tr>
									<th>Id</th>
									<th>Mot clé</th>
									<th>Image</th>
									<th>Theme generale</th>
									<th>Commentaire</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
							{% for theme_image in theme_images %}
								<tr>
									<td>{{ theme_image.id }}</td>
									<td>{{ theme_image.KeyWord }}</td>
									<td style="width:250px">
										<div class="card-body" data-toggle="modal" data-target="#myModal_aff_image" onclick="show_modal_affiche_theme_image({{ theme_image.Id }})">
											<div class="text-center">
												<img class="img-fluid img-fluid shadow" style="width: 15rem;" src="{{ absolute_url('/uploads/themes/') }}{{ theme_image.Image }}" alt="">
											</div>
										</div>
									</td>
									<td>{{ theme_image.ThemeId.Comments }}</td>
									<td>{{ theme_image.Comments }}
									
									</td>
									<td>
								
										<a  class="btn btn-info"  href="{{ path('theme_image_edit', {'id': theme_image.id}) }}"><i class="fa fa-edit"></i></a>
										
										<button class=" btn btn-danger" onclick="show_modal_sup_theme({{ theme_image.id }})" data-toggle="modal" data-target="#myModal_sup_theme_image"   type="button" title="Supprimer">
											<i class="fa fa-times"></i>
										</button>   
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="4">no records found</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
						
						</div>
                    </div>
                </div>
            </div>

          </div>


        </div>
        <!-- /.container -->

      </div>
      <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>



</br></br></br>
		<footer class="" style="position: fixed;z-index: 1;bottom: 0;">			
  				<button class="btn btn-circle btn-info menu_home_page">
					<a  href="/admin/" style="z-index: 2;display: inline;">
					<i class="fas fa-home"></i>
					</a>				  
				</button>
			</footer>
</body>
	{% endblock %}
	
    
